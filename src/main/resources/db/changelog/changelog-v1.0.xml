                <constraints nullable="false"/>
            </column>
            <column name="createdat" type="java.sql.Types.TIMESTAMP_WITH_TIMEZONE">
                <constraints nullable="false"/>
            </column>
            <column name="modifiedby" type="varchar(255)">
